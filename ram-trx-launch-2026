import { useState, useEffect } from 'react';
import { Card, CardContent } from '@/components/ui/card';
import {
  ChevronLeftIcon,
  ChevronRightIcon,
  PauseIcon,
  PlayIcon,
  SunIcon,
  MoonIcon,
  GithubIcon,
} from 'lucide-react';

